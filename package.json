{
  "name": "shade",
  "type": "module",
  "version": "0.0.1",
  "description": "",
  "author": "Jing Chan",
  "license": "ISC",
  "keywords": [ ],
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "cd client && pnpm run dev",
    "dev:server": "cd server && pnpm run dev",
    "dev": "concurrently --prefix '{time} - [{name}]' -c auto 'pnpm:dev:*'",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build": "pnpm run build:client && pnpm run build:server",
    "test:precommit:client": "cd client && pnpm run test:precommit",
    "test:precommit": "pnpm run test:precommit:client"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.11",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "@webgpu/types": "^0.1.44",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-vue": "9.27.0",
    "globals": "15.8.0",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "7.16.1",
    "vitest": "^2.0.3",
    "vue-tsc": "^2.0.26"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run test:precommit && pnpm lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "prettier --write --list-different",
      "eslint"
    ]
  }
}
